<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_back"
    tools:context=".SignInActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="35sp"
        android:textStyle="bold"
        android:padding="10sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="10sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="396dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="25sp"
        android:background="@drawable/btn"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="15sp">

        <TextView
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="15sp"
            android:text="Email Address"
            android:textColor="#431A8C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/em"
            android:layout_width="298dp"
            android:layout_height="52dp"
            android:layout_margin="17sp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorApp"
            android:drawableRight="@drawable/email"
            android:drawableTint="@color/colorApp"
            android:hint="exemple@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="10sp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"
            android:text="Password"
            android:textColor="#431A8C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="298dp"
            android:layout_height="52dp"
            android:layout_margin="17sp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorApp"
            android:drawableTint="@color/colorApp"
            android:hint=" ********"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/fp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Forgot password ?"
            android:textColor="@color/colorApp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/lo"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/colorApp"
            android:text="Login"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text=" Or  Login  using"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/go"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginTop="15sp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:drawableEnd="@mipmap/ic_launcher"
        android:text="Sign In with Google"
        android:textColor="@color/colorApp"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:text="Don't have an account ?  CREATE"
        android:textColor="#523587"
        android:textSize="20sp" />


</LinearLayout>